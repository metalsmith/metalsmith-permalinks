{
  "name": "metalsmith-permalinks",
  "description": "A metalsmith plugin for permalinks.",
  "repository": "git://github.com/segmentio/metalsmith-permalinks.git",
  "version": "2.2.0",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "lint": "xo",
    "lint:fix": "xo --fix",
    "dev": "nodemon --exec \"npm run lint:fix && npm test\"",
    "mocha": "mocha",
    "test": "npm run lint && npm run mocha",
    "preversion": "npm run lint && npm test",
    "postversion": "git push && git push --tags && npm publish"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "moment": "^2.24.0",
    "slugify": "^1.4.0",
    "substitute": "https://github.com/segment-boneyard/substitute/archive/0.1.0.tar.gz"
  },
  "devDependencies": {
    "assert-dir-equal": "^1.1.0",
    "metalsmith": "^2.3.0",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "rimraf": "^2.7.1",
    "transliteration": "^2.1.8",
    "xo": "^0.24.0"
  },
  "files": [
    "lib/*.js"
  ],
  "engines": {
    "node": ">=6"
  },
  "xo": {
    "esnext": true,
    "prettier": true,
    "space": true,
    "rules": {
      "capitalized-comments": "off",
      "new-cap": "off",
      "no-console": "warn",
      "spaced-comment": "off",
      "valid-jsdoc": [
        "warn",
        {
          "requireParamDescription": false,
          "requireReturnDescription": false
        }
      ]
    }
  }
}
